# =============================================================================
# Application Configuration
# =============================================================================
NODE_ENV=development
LOG_LEVEL=debug
APP_NAME=chatapp

# =============================================================================
# Backend Server Configuration
# =============================================================================
PORT=4000
FRONTEND_URL=http://localhost:3000

# =============================================================================
# Frontend Configuration
# =============================================================================
NEXT_PUBLIC_BACKEND_URL=http://localhost:4000

# =============================================================================
# LLM Configuration
# =============================================================================
OPENROUTER_API_KEY=sk-or-v1-your-key-here
#OPENROUTER_MODEL=anthropic/claude-haiku-4.5
OPENROUTER_MODEL=openai/gpt-4.1

# =============================================================================
# Supabase Configuration
# =============================================================================
# Frontend (browser-side) - used by Next.js
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
#NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY=sb_publishable_your-key-here

# Backend (server-side) - used by Express
SUPABASE_URL=https://your-project.supabase.co
#SUPABASE_ANON_KEY=your-anon-key
SUPABASE_PUBLISHABLE_KEY=sb_publishable_your-key-here

# =============================================================================
# Database Configuration (Drizzle)
# =============================================================================
# Use the connection pooling URL (port 6543) for serverless
DATABASE_URL=postgresql://postgres.your-ref:your-password@aws-0-region.pooler.supabase.com:5432/postgres

# =============================================================================
# Chargebee Configuration (Billing & Token Purchases)
# =============================================================================
CHARGEBEE_SITE=https://your-site.chargebee.com
CHARGEBEE_API_KEY=test_your-api-key
CHARGEBEE_WEBHOOK_USERNAME=webhook-user
CHARGEBEE_WEBHOOK_PASSWORD=webhook-pass

# =============================================================================
# RAG Configuration (Optional - all have defaults)
# =============================================================================
RAG_EMBEDDING_MODEL=openai/text-embedding-3-small
RAG_SIMILARITY_THRESHOLD=0.7
RAG_MAX_CHUNKS=5
RAG_MATCH_COUNT=10
RAG_ENABLED=true
