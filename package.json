{
  "name": "chatapp",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run dev:backend & bun run dev:frontend",
    "dev:backend": "cd packages/backend && bun run dev",
    "dev:frontend": "cd packages/frontend && bun run dev",
    "build": "bun run build:shared && bun run build:backend && bun run build:frontend",
    "build:shared": "cd packages/shared && npx tsc",
    "build:backend": "cd packages/backend && npx tsc --noEmit",
    "build:frontend": "cd packages/frontend && bun run build",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "test": "bun run test:shared && bun run test:backend && bun run test:frontend",
    "test:shared": "cd packages/shared && bun test",
    "test:backend": "cd packages/backend && bun test",
    "test:frontend": "cd packages/frontend && bun test",
    "db:generate": "cd packages/backend && drizzle-kit generate",
    "db:migrate": "cd packages/backend && drizzle-kit migrate",
    "db:push": "cd packages/backend && drizzle-kit push",
    "db:studio": "cd packages/backend && drizzle-kit studio"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/bun": "^1.3.5",
    "typescript": "^5"
  },
  "ignoreScripts": [
    "sharp",
    "unrs-resolver"
  ],
  "trustedDependencies": [
    "sharp",
    "unrs-resolver"
  ]
}
